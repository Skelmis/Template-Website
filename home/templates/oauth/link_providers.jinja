{% extends "base.jinja" %}

{% block content %}
    <div class="page">
        <div class="container py-4">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <h2 class="page-title">
                                Link OAuth Providers
                            </h2><br>
                        </div>
                    </div>
                </div>
            </div>
            {% include 'alerts.jinja' %}
            <div class="card card-md">
                <div class="card-body">
                    <form class="card card-md" method="POST" autocomplete="off" novalidate enctype="multipart/form-data">
                        {{ csrf_input | safe }}
                        <div class="card-body">
                            <div class="mb-3">
                                <p>
                                    This is all the providers that have attempted to authenticate
                                    to your user.
                                </p>
                                <small>If you tick allow, you can use that provider to authenticate in future.</small>
                            </div>
                            <h4>Providers</h4>
                            {% for provider in providers %}
                                <div>
                                    <div class="form-label">{{ provider.provider.title() }} (Provider Account ID, {{ provider.oauth_id }})</div>
                                    <div>
                                        <label class="form-check form-check-inline">
                                            <input id="provider-{{ provider.id }}"
                                                   name="provider-{{ provider.id }}" class="form-check-input"
                                                   type="radio" name="radios-inline"
                                                   {% if provider.user %}checked=""{% endif %}
                                                   value="Allowed">
                                            <span class="form-check-label">Allow Sign In Via This Provider This Provider</span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input id="provider-{{ provider.id }}"
                                                   name="provider-{{ provider.id }}" class="form-check-input"
                                                   type="radio" name="radios-inline"
                                                   {% if not provider.user %}checked=""{% endif %}
                                                   value="Disallowed">
                                            <span class="form-check-label">Don't Allow Sign In Via This Provider This Provider</span>
                                        </label>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary w-100">Save</button>
                            </div>
                        </div>
                    </form>
                    <br>
                    <a href="/">
                        <button type="submit" class="btn btn-secondary w-10">Go Back</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
